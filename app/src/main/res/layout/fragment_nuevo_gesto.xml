<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin"
        android:id="@+id/idFragmentoFormNuevoGesto"
        tools:context="com.oscar.gestures.fragments.FragmentoFormularioNuevoGesto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/nuevo_gesto"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="30sp" />

    </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <EditText

                android:background="@drawable/formacajatextonombregesto"
                android:id="@+id/txtNombreGesto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textAutoComplete"/>

            <Spinner

                android:minHeight="10dp"
                android:layout_marginTop="20dp"
                android:id="@+id/desplegableAplicacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:spinnerMode="dialog"
                android:background="@drawable/formaspinner">

            </Spinner>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="35dp"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal">

                <Button
                    android:background="@drawable/formaboton"
                    android:id="@+id/btnSiguiente"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/siguiente"
                    android:textStyle="bold"
                    android:textColor="@color/colorWhite"/>

                <Button
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/formaboton"
                    android:id="@+id/btnLimpiar"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/limpiar"
                    android:textStyle="bold"
                    android:textColor="@color/colorWhite"/>


            </LinearLayout>


        </LinearLayout>

</LinearLayout>
